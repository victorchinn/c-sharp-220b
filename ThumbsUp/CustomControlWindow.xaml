<Window x:Class="ThumbsUp.CustomControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThumbsUp"
        mc:Ignorable="d"
        Title="CustomControlWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            
        <local:NumericTextBox  Background="LightGray"/>
            
        <local:MyOwnCustomControlHomework x:Name="InputField" Background="Beige"/>
           
        </StackPanel>
    </Grid>
</Window>
