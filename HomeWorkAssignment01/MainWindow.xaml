<Window x:Class="HomeWorkAssignment01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeWorkAssignment01"
        mc:Ignorable="d"
        Title="MainWindow"
        Background="#22FFFFFF"
        Height="350"
        Width="525">

    <StackPanel>

        <TextBlock Text="Enter Name:"
                   Foreground="White" />
        <TextBox x:Name="uxName"
                 Background="SlateGray"
                 TextChanged="uxName_OR_uxPassword_TextChanged" />
        <TextBlock Text="Enter Password:"
                   Foreground="White" />
        <TextBox x:Name="uxPassword"
                 Background="SlateGray"
                 TextChanged="uxName_OR_uxPassword_TextChanged" />
        <Button x:Name="uxSubmit"
                Click="uxSubmit_Click"
                Content="Submit"
                IsEnabled="False" />

    </StackPanel>
</Window>