    <Grid x:Name="uxGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0"
                   Grid.Row="0"
                   HorizontalAlignment="Right"
                   Text="Name : " />
        <TextBox x:Name="uxName"
                 Text="{Binding Name}"
                 Grid.Column="1"
                 Grid.Row="0" />

        <TextBlock Grid.Column="0"
                   Grid.Row="1"
                   HorizontalAlignment="Right"
                   Text="PartNumber : " />
        <TextBox x:Name="uxPartNumber"
                 Text="{Binding PartNumber}"
                 Grid.Column="1"
                 Grid.Row="1" />

        <TextBlock Grid.Column="0"
                   Grid.Row="2"
                   HorizontalAlignment="Right"
                   Text="MemberOf : " />
        <TextBox x:Name="uxMemberOf"
                 Text="{Binding MemberOf}"
                 Grid.Column="1"
                 Grid.Row="2" />

        <TextBlock Grid.Column="0"
                   Grid.Row="3"
                   HorizontalAlignment="Right"
                   Text="Type : " />
        <StackPanel Orientation="Horizontal"
                    Grid.Column="1"
                    Grid.Row="3">
            <RadioButton x:Name="uxHome"
                         IsChecked="true"
                         Content="Home" />
            <RadioButton x:Name="uxMobile"
                         Content="Mobile" />
        </StackPanel>

        <TextBlock Grid.Column="0"
                   Grid.Row="5"
                   HorizontalAlignment="Right"
                   Text="Notes : " />

        <TextBox x:Name="uxDescription"
                 Text="{Binding Description}"
                 Grid.Column="1"
                 Grid.Row="5"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 Height="60" />


        <TextBlock Grid.Column="0"
                   Grid.Row="6"
                   HorizontalAlignment="Right"
                   Text="Description : " />

        <TextBox x:Name="uxNotes"
                 Text="{Binding Notes}"
                 Grid.Column="1"
                 Grid.Row="6"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 Height="60" />

        <StackPanel Orientation="Horizontal"
                    Grid.Column="1"
                    Grid.Row="7"
                    HorizontalAlignment="Right">
            <Button x:Name="uxSubmit"
                    MinWidth="10"
                    HorizontalAlignment="Center"
                    Click="uxSubmit_Click"
                    Margin="10"
                    Content="Submit" />
            <Button x:Name="uxCancel"
                    MinWidth="10"
                    HorizontalAlignment="Center"
                    Click="uxCancel_Click"
                    Margin="10"
                    Content="Cancel" />
        </StackPanel>

    </Grid>








</Window>
